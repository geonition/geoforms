/* range elements in non-popup forms*/
.range-container {
    text-align: left;
    width: 75%;
}
.range-container p {
    font-weight: bold !important;
}
.range-container span {
    width: 27%;
    display: inline-block;
}
.range-container input {
    width: 250px;
    margin: 20px;
}
.range-min-label {
    text-align: right;
}
.range-max-label {
    text-align: left;
}
/* end range elements in non-popup forms */
/* range elements in popup forms */
.popupform .range-container {
    background: #E4F5F5;
}
.popupform .range-container span {
    width: 100%;
    display: block;
    text-align: left;
}
.popupform .range-container input {
    width: 80%;
    display: block;
}
.popupform .slider {
    width: 80% !important;
}
.popupform .range-max-label {
    width: 60% !important;
    text-align: right !important;
    padding-left: 40%; !important;
}
.popupform .range-min-label {
    width: 60% !important;
    text-align: left !important;
    padding-right: 40%; !important;
}

.popupform {
    height: inherit;
    overflow: auto;
    min-width: 200px;
    font-size: 13px;
}

.lt-ie9 .popupform .padding {
    height: 30px;
}

.popup_feature_buttons {
    background-color: #FFFFFF;
    bottom: 0;
    padding-top: 5px;
    position: absolute;
    width: 90%;
    z-index: 3
}

.lt-ie9 .popup_feature_buttons {
    bottom: 5px;
}
/* end elements in popup forms */

#popups {
    display: none;
}

